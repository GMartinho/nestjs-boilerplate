generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum RoleUserAccount {
  USER
  ADMIN
}

enum StatusUserAccount {
  ACTIVE
  INACTIVE
  SUSPENDED
  ARCHIVED
}

enum ProviderUserAccount {
  EMAIL
  GOOGLE
  FACEBOOK
  APPLE
  TWITTER
}

model user_account {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  first_name String
  last_name  String
  email      String     @unique
  password   String
  role       RoleUserAccount       @default(USER)
  status     StatusUserAccount     @default(ACTIVE)
}